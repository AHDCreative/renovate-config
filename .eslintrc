{
    "extends": "@ahdcreative/eslint-config-ahd",
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "rules": {
        "no-plusplus": "off",
        "no-underscore-dangle": ["error", { "allow": ["_index"] }],
        "vars-on-top": "off"
    },
    "settings": {
        // Specificare la versione di react manualmente per evitare il riconoscimento automatico.
        "react": {
            "version": "detect"
        }
    }
}
