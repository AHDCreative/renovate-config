{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":timezone(Europe/Rome)",
    "github>AHDCreative/renovate-config:schedule",
    "github>AHDCreative/renovate-config:automerge",
    "github>AHDCreative/renovate-config:groupJest",
    "github>AHDCreative/renovate-config:groupLinters",
    "github>AHDCreative/renovate-config:postUpdate"
  ],
  "labels": [
    "renovate"
  ],
  "dockerfile": {
    "fileMatch": [
      "(^|/)Dockerfile-[^/]*$"
    ]
  },
  "npm": {
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "groupName": "boto3",
      "matchPackageNames": [
        "boto3",
        "botocore"
      ]
    }
  ]
}
